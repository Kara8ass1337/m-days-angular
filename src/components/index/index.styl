.progress-indicator {
  &__shadow {
    height: 100vh;
    width: 100%;
    background: rgba(0, 0, 0, 0.4);
    position: relative;
    z-index: 1;
  }

  &__wrapper {
    position: absolute;
    margin: auto;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    height: 250px;
    max-width: 1200px;
    font-size: 0;
  }

  &__year {
    font-family: 'Avenir LT Std 95 Black Oblique';
    font-size: 51px;
    color: white;
    margin: 0 auto;
    text-align: center;
    display: inline-block;
    vertical-align: middle;
    width: 262px;
    height: 70px;
    line-height: 80px;

    span {
      display: inline-block;
      vertical-align: middle;
      font: inherit;
    }
  }

  &__month {
    display: inline-block;
    vertical-align: bottom;
    margin: 0 auto;
    text-align: center;
    /*font-size: 250%;*/
    font-family: 'Avenir LT Std 35 Light Oblique';
    font-size: 38px;
    width: 262px;
    height: 50px;
    line-height: 55px;
    color: white;
    background-color: #020202;
  }

  &__day {
    display: inline-block;
    vertical-align: bottom;
    margin: 0 auto;
    margin-top: 15px;
    text-align: center;
    font-size: 38px;
    font-family: 'Avenir LT Std 35 Light Oblique';
    color: white;
    clear: left;
    width: calc(100% - 524px);
  }

  &__time {
    margin: 0 auto;
    text-align: center;
    font-size: 0;
    color: white;
    line-height: 1;

    &__hours,
    &__minutes {
      font-family: 'Avenir LT Std 95 Black Oblique';
      font-size: 98px;
    }

    &__seconds {
      font-family: 'Avenir LT Std 35 Light';
      font-style: italic;
      font-size: 59px;
      padding-left: 10px;
      //margin-top: 20px;
    }
  }

  &__progress-bar {
    width: calc(100% - 524px);
    margin: 0 auto;
    text-align: center;
    position: relative;
    z-index: 2;
    display: inline-block;
    vertical-align: middle;

    &__bg {
      width: 100%;
      height: 30px;
      background-color: #3d3d3d;
    }

    &__walking {
      height: 30px;
      line-height: 30px;
      background-color: white;
      margin-top: -30px;
    }
  }

  &__percent {
    font-family: 'Avenir LT Std 95 Black Oblique';
    font-size: 51px;
    color: white;
    margin: 0 auto;
    /*margin-top: 50px;*/
    text-align: center;
    display: inline-block;
    vertical-align: middle;
    width: 262px;
    height: 70px;
    line-height: 80px;

    span {
      font: inherit;
    }
  }

  &__percent-full {
    display: inline-block;
    vertical-align: bottom;
    margin: 0 auto;
    text-align: center;
    font-family: 'Avenir LT Std 35 Light Oblique';
    font-size: 38px;
    width: 262px;
    height: 50px;
    line-height: 55px;
    color: white;
    background-color: #020202;

    span {
      font: inherit;
    }
  }
}