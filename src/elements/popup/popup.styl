.popup-wrapper {
  opacity: 0;
  position: absolute;
  z-index: 10;
  width: 100%;
  height: 100vh;
  top: -200vh;
  bottom: 0;
  right: 0;
  left: 0;
  margin: auto;
  overflow: auto;
  padding-bottom: 25px;
  padding-top: 100px;
  font-family: "ProximaNovaAltThin", Arial, sans-serif;
  font-weight: lighter;
  color: #fff;
  background: rgba(0, 0, 0, 0.95);
  transition: all ease 0.3s 0s;

  &.active {
    top: 0;
    opacity: 1;
  }
}

.popup {
  width: 960px;
  margin: 0 auto;

  &__go-back {
    text-align: center;
    margin-top: 20px;
    font-size: 24px;
  }
}