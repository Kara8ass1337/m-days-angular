* {
  padding: 0;
  margin: 0;
  border: 0;
  box-sizing: border-box;
  font: inherit;
  color: inherit;
  text-decoration: none;
}

body {
  background: #000;
  font-family: "Helv-4-Light", Arial, sans-serif;
}

a {
  font-family: "ProximaNovaRegular";
  text-decoration: underline;
  color: #fff;
  transition: ease opacity 0.3s 0s;

  &:hover {
    color: #666;
    opacity: 0.5;
  }
}

button {
  background: none;
  border: 0;
  cursor: pointer;
  outline: none;
}

//s - unquote function build-in stylus
$fadeTransitionDuration = "0.5s";
$fadeTransition = s("opacity cubic-bezier(0.250, 0.460, 0.450, 0.940) " + $fadeTransitionDuration + " 0s");

//for ng-if
.fade {
  transition: $fadeTransition;

  &.ng-enter,
  &.ng-leave {
    transition: $fadeTransition;
  }

  &.ng-enter,
  &.ng-leave.ng-leave-active {
    opacity: 0;
    z-index: 5;
  }

  &.ng-leave,
  &.ng-enter.ng-enter-active {
    opacity: 1;
    z-index: 10;
  }

  &.ng-enter.ng-enter-active {
    transition-delay: $fadeTransitionDuration;
  }
}

//for ng-show/hide
.fade {
  &.ng-hide-add,
  &.ng-hide-remove {
    transition: $fadeTransition;
  }

  &.ng-hide-remove,
  &.ng-hide-add.ng-hide-add-active {
    opacity: 0;
    z-index: 5;
  }

  &.ng-hide-add,
  &.ng-hide-remove.ng-hide-remove-active {
    opacity: 1;
    z-index: 10;
  }

  &.ng-hide-remove.ng-hide-remove-active {
    transition-delay: $fadeTransitionDuration;
  }
}