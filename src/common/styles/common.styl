* {
  padding: 0;
  margin: 0;
  border: 0;
  box-sizing: border-box;
  font: inherit;
  color: inherit;
  text-decoration: none;
}

body {
  background: #000;
  font-family: "Helv-4-Light", Arial, sans-serif;
}

a {
  font-family: "ProximaNovaRegular";
  text-decoration: underline;
  color: #fff;
  transition: ease opacity 0.3s 0s;

  &:hover {
    color: #666;
    opacity: 0.5;
  }
}

button {
  background: none;
  border: 0;
  cursor: pointer;
  outline: none;
}

.fade {
  &.ng-enter,
  &.ng-leave {
    transition: all cubic-bezier(0.250, 0.460, 0.450, 0.940) 0.5s 0s;
  }

  &.ng-enter,
  &.ng-leave.ng-leave-active {
    opacity: 0;
  }

  &.ng-leave,
  &.ng-enter.ng-enter-active {
    opacity: 1;
  }
}

.fade {
  &.ng-hide-remove,
  &.ng-hide-add {
    transition: all cubic-bezier(0.250, 0.460, 0.450, 0.940) 0.5s 0s;
  }

  &.ng-hide-remove.ng-hide-remove-active,
  &.ng-hide-add {
    opacity: 1;
  }

  &.ng-hide-add.ng-hide-add-active,
  &.ng-hide-remove {
    opacity: 0;
  }
}